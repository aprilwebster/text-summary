    "summary",
    "ibm watson"
  ],
  "dependencies": {
    "babel-preset-es2015": "^6.18.0",
    "browserify": "^13.1.1",
    "marked": "^0.3.5",
    "remove-markdown": "^0.1.0",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.1",
    "chai": "^3.5.0",
    "codecov": "^1.0.1",
    "eslint": "^3.11.1",
    "istanbul": "^0.4.3",
    "mocha": "^3.2.0"
